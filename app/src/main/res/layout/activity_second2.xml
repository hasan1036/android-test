<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity2">
    <EditText
        android:id="@+id/x_valueid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFAE37"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="24sp"
        />

    <EditText
        android:id="@+id/y_valueid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/x_value"
        android:layout_alignStart="@+id/x_value"
        android:layout_below="@+id/x_value"
        android:layout_marginTop="10dp"
        android:background="#FFAE37"
        android:ems="10"
        android:hint="-120"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="24sp"
        />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show ECG Value"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg2"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold"
        />




</LinearLayout>