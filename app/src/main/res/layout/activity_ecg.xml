<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ecg">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#E91E63"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ECG History"
                />
            <TextView
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1842- Italian scientist Carlo Matteucci realizes that electricity is associated with th heart beat.\n
        1876 - Irish scientist Marey analyzes the electric pattern of frog's heart.\n
        1895-William Einthoven credited for the invention of EKG.\n
        1906- using the string electrometer EKG,William Enthoven diagnoses some heart problem.\n
        1924 - The noble prize for physiology is given to William Einthoven for his work on EKG\n
        1938  - AHA and Cardiac society of great Britan defined and position of chest leads.\n
        1942 - Goldberger increased Wilson's unipolar lead voltage by 50%\n
        2005 - Successful reduction in time of onset of chest pain and PTCA by wireless transmission of ECG."
                />

            <TextView
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#E91E63"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The cardic conduction system"
                />

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:src="@drawable/conduction"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#E91E63"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Action Potential of Cardiac Cell"
                />


            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:src="@drawable/cardiacell"
                android:layout_height="200dp">

            </ImageView>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:src="@drawable/ecgwhat"
                android:layout_height="200dp">

            </ImageView>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:src="@drawable/depolarization"
                android:layout_height="200dp">

            </ImageView>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:src="@drawable/impluse"
                android:layout_height="200dp">

            </ImageView>



            <TextView
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#E91E63"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ECG Leads(the 12 leads)"
                />

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:src="@drawable/wave"
                android:layout_height="200dp">

            </ImageView>
        </LinearLayout>


    </LinearLayout>
</ScrollView>